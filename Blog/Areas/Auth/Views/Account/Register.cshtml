@model Blog.Areas.Auth.Models.RegisterViewModel

@{
    ViewBag.Title = "Зарегистрироваться";
}

<div class="login-form padding20 block-shadow" id="account">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        <h1 class="text-light">Зарегистрироваться</h1>
        <hr class="thin" />

        @Html.ValidationSummary(true)

        <div class="form-token">@Html.AntiForgeryToken()</div>

        <div class="form-group">
            <div class="input-control text full-size">
                @Html.LabelFor(m => m.FullName)
                @Html.TextBoxFor(m => m.FullName)
            </div>
            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "marker-on-top" })
        </div>

        <div class="form-group">
            <div class="input-control text full-size">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
            </div>
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "marker-on-top" })
        </div>

        <div class="form-group">
            <div class="input-control password full-size">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
                <button class="button helper-button reveal"><span class="mif-looks"></span></button>
            </div>
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "marker-on-top" })
        </div>

        <div class="form-group">
            <div class="input-control password full-size">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
                <button class="button helper-button reveal"><span class="mif-looks"></span></button>
            </div>
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "marker-on-top" })
        </div>

        <div class="form-group">
            <div class="input-control submit">
                <button type="submit" class="button primary">Зарегистрироваться</button>
                @Html.RouteLink("Назад", "Blog_default", new { controller = "Blog", action = "Index" }, new { @class = "button link" })
            </div>
        </div>
    }
</div>